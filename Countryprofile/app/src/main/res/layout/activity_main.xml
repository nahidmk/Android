<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#03A9F4"
    tools:context=".MainActivity">
    <DigitalClock
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:padding="20dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:background="#07D7F1"
        />

  <Button
      android:id="@+id/bangladeshid"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:text="Bangldesh"
      android:textSize="30dp"
      android:textStyle="bold"
      android:background="#ff22"
      android:drawableLeft="@drawable/bangladesh"
      android:layout_marginBottom="10dp"
      />
    <Button
        android:id="@+id/pakistanid"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="pakistan"
        android:textSize="30dp"
        android:textStyle="bold"
        android:background="#ff22"
        android:drawableLeft="@drawable/pakistan"
        android:layout_marginBottom="10dp"
        />
    <Button
        android:id="@+id/nepalid"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Nepal"
        android:textSize="30dp"
        android:textStyle="bold"
        android:background="#ff22"
        android:drawableLeft="@drawable/nepal"
        android:layout_marginBottom="10dp"
        />

</LinearLayout>